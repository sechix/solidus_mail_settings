<% content_for :page_title do %>
  <%= I18n.t('spree.mail_method_settings') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon 'envelope', I18n.t('spree.mail_methods.send_testmail'), testmail_admin_mail_method_path,
    method: :post, title: I18n.t('spree.mail_methods.send_testmail'), class: 'send_mail button' %>
<% end %>

<%= form_tag admin_mail_method_path, method: :put do |f| %>
  <fieldset>
    <%= render 'form', f: f %>
    <div class="form-actions actions" data-hook="buttons"><%= button_tag I18n.t('spree.actions.update') %></div>
  </fieldset>
<% end %>
